{
  "version": 2,
  "framework": null,
  "functions": {
    "api/**/*.py": {
      "memory": 256,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/health",
      "dest": "/api/main.py",
      "methods": ["GET"],
      "headers": {
        "cache-control": "no-cache"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    }
  ],
  "env": {
    "CORS_ORIGINS": "https://aerasync.vercel.app"
  },
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["api/**"]
      }
    }
  ]
}