{
  "version": 2,
  "framework": null,
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/main.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ],
  "env": {
    "CORS_ORIGINS": "https://aerasync-web.vercel.app"
  },
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["api/**"],
        "maxDuration": 30,
        "memory": 256
      }
    }
  ]
}
